{
	"name": "Fastly showing 5xx error for service {{service.name}} ",
	"type": "metric alert",
	"query": "avg(last_5m):avg:fastly.status_5xx{*} by {service} >= 1",
	"message": "Fastly showing 5xx error for service {{service.name}} ",
	"tags": [
		"fastly",
		"default"
	],
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"new_host_delay": 300,
		"require_full_window": true,
		"notify_no_data": false,
		"renotify_interval": "0",
		"escalation_message": "",
		"no_data_timeframe": null,
		"include_tags": false,
		"thresholds": {
			"critical": 1
		}
	}
}