{
	"name": "AWS - EBS Balance Low",
	"type": "query alert",
	"query": "avg(last_1h):avg:aws.ec2.ebsiobalance{*} by {name} <= 20",
	"message": "{{#is_alert}}\n\n{{name.name}} EBS balance has reached {{value}} percent on Cloudwatch{{/is_alert}}",
	"tags": [
		"aws",
		"ebs",
		"default"
	],
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 1,
		"silenced": {},
		"include_tags": false,
		"no_data_timeframe": 60,
		"require_full_window": true,
		"new_host_delay": 300,
		"notify_no_data": true,
		"renotify_interval": 0,
		"escalation_message": "",
		"thresholds": {
			"critical": 20,
			"warning": 30
		}
	}
}